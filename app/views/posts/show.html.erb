<div class="main container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @post.author.name %>
  </p>

  <p>
    <strong>Published date:</strong>
    <%= @post.published_date %>
  </p>

  <p>
    <strong>Published:</strong>
    <%= @post.published %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>

</div>