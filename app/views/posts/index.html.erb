<div class="main container">
  <div class="panel panel-default">

    <div class="panel-heading">
      <h1>Listing posts</h1>
    </div>

    <div class="table-responsive">
      <table class = "table">

        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Published date</th>
            <th>Published</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.author %></td>
              <td><%= post.published_date %></td>
              <td><%= post.published %></td>
              <td><%= post.content %></td>
              <td><%= link_to 'Show', post, class: "btn btn-default active" %></td>
              <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-info active" %></td>
              <td><%= link_to 'Destroy', post, class: "btn btn-danger active", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <br>

  <%= link_to 'New Post', new_post_path, class: "btn btn-primary active" %>

</div>
